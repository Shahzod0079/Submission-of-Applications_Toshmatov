<Page x:Class="Submission_of_Applications_Toshmatov.Pages.Passport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="800"
      Title="Passport">

    <Grid Background="#F8F9FA">
        <!-- Шапка -->
        <Grid Margin="0,0,0,550" Background="White" Height="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="152*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="102*"/>
                <ColumnDefinition Width="521*"/>
            </Grid.ColumnDefinitions>
            <Image HorizontalAlignment="Left" Height="69" Margin="10,-26,0,0" VerticalAlignment="Top" Width="69" Source="E:\Submission of Applications_Toshmatov\Submission of Applications_Toshmatov\Pages\Логотип_Пермский_авиационный_техникум.png"/>
            <Label Content="Электронная приемная компания" HorizontalAlignment="Left" Margin="84,-20,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" Grid.ColumnSpan="4"/>
            <Label Content="Пермского авиационного техникума им. А. Д. Швецова" HorizontalAlignment="Left" Margin="84,9,0,0" VerticalAlignment="Top" FontSize="12" Grid.ColumnSpan="4"/>
        </Grid>

        <!-- Основной контент -->
        <Grid Margin="10,90,10,10">
            <!-- Заголовок Паспортные данные -->
            <Label Content="Паспортные данные:" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>

            <!-- ФИО -->
            <Label Content="Фамилия:" HorizontalAlignment="Left" Margin="0,40,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtLastName" Height="24" Margin="0,66,580,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>

            <Label Content="Имя:" HorizontalAlignment="Left" Margin="225,40,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtFirstName" Height="24" Margin="225,66,355,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>

            <Label Content="Отчество:" HorizontalAlignment="Left" Margin="446,40,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtMiddleName" Height="24" Margin="460,66,120,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>

            <!-- Основные данные -->
            <Label Content="Дата рождения:" HorizontalAlignment="Left" Margin="-1,95,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtBirthDate" Height="24" Margin="-1,121,12,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

            <Label Content="Гражданство:" HorizontalAlignment="Left" Margin="-1,146,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtCitizenship" Height="24" Margin="-1,172,12,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

            <Label Content="Место рождения:" HorizontalAlignment="Left" Margin="0,190,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtBirthPlace" Height="24" Margin="-1,216,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

            <!-- Данные паспорта -->
            <Label Content="Серия и номер паспорта:" HorizontalAlignment="Left" Margin="0,233,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtPassportNumber" Height="24" Margin="243,256,279,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

            <Label Content="Дата выдачи:" HorizontalAlignment="Left" Margin="242,233,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtIssueDate" Height="24" Margin="568,256,12,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>

            <Label Content="Код подразделения:" HorizontalAlignment="Left" Margin="568,233,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtDepartmentCode" Height="24" Margin="0,256,580,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>

            <Label Content="Кем выдан:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox x:Name="txtIssuedBy" Height="24" Margin="0,310,12,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

            <!-- Адреса -->
            <Label Content="Адрес по прописке:" HorizontalAlignment="Left" Margin="-1,334,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtRegistrationAddress" Height="24" Margin="10,365,470,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>

            <Label Content="Район:" HorizontalAlignment="Left" Margin="560,342,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtRegistrationDistrict" Height="24" Margin="560,370,20,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>

            <Label Content="Адрес проживания фактический:" HorizontalAlignment="Left" Margin="4,389,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtActualAddress" Height="24" Margin="4,415,476,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>

            <Label Content="Район:" HorizontalAlignment="Left" Margin="554,394,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtActualDistrict" Height="24" Margin="560,415,20,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>

            <!-- Загрузка файлов -->
            <TextBlock Text="Прикрепите сканы страниц паспорта с фотографией и действующей пропиской" 
                      HorizontalAlignment="Left" Margin="0,460,0,0" VerticalAlignment="Top" TextWrapping="Wrap" Width="600"/>

            <TextBlock Text="(Формат документов должен быть PNG, JPEG или PDF, а максимальный размер каждого файла 5 МБ)" 
                      HorizontalAlignment="Left" Margin="0,485,0,0" VerticalAlignment="Top" FontSize="10" Foreground="red" TextWrapping="Wrap" Width="600"/>

            <Button x:Name="btnSelectFiles" Content="Выбрать ..." HorizontalAlignment="Left" Margin="655,509,0,0" VerticalAlignment="Top" Width="100" Height="25"/>

            <!-- Кнопка Продолжить -->
            <Button Content="Продолжить" HorizontalAlignment="Right" Margin="0,0,0,10" VerticalAlignment="Bottom" 
                    Width="150" Height="30"/>
            <TextBox x:Name="txtIssuedBy_Копировать" Height="24" Margin="0,509,152,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Page>