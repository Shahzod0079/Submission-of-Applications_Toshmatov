            <Label Content="Можете выбрать несколько специальностей:" 
                   HorizontalAlignment="Left" Margin="20,65,0,0" VerticalAlignment="Top" FontSize="10" Foreground="Red"/>

            <StackPanel Margin="25,90,0,0">
                <CheckBox Content="12.02.01 Авиационные приборы и комплексы" Margin="0,2,0,2"/>
                <CheckBox Content="15.02.09 Адаптивные технологии" Margin="0,2,0,2"/>
                <CheckBox Content="09.02.07 Информационные системы и программирование (Программист)" Margin="0,2,0,2"/>
                <CheckBox Content="09.02.07 Информационные системы и программирование (Разработчик веб и мультимедийных приложений)" Margin="0,2,0,2"/>
                <CheckBox Content="09.02.01 Компьютерные системы и комплексы" Margin="0,2,0,2"/>
                <CheckBox Content="22.02.05 Литейное производство черных и цветных металлов" Margin="0,2,0,2"/>
                <CheckBox Content="15.02.10 Мехатроника и мобильная робототехника" Margin="0,2,0,2"/>
                <CheckBox Content="09.02.05 Прикладная информатика (по отраслям)" Margin="0,2,0,2"/>
                <CheckBox Content="24.02.03 Производство авиационных двигателей" Margin="0,2,0,2"/>
                <CheckBox Content="12.02.08 Радиоэлектронные приборные устройства" Margin="0,2,0,2"/>
                <CheckBox Content="15.02.08 Технология машиностроения" Margin="0,2,0,2"/>
                <CheckBox Content="15.02.15 Технология металлообрабатывающего производства" Margin="0,2,0,2"/>
                <CheckBox Content="27.02.07 Управление качеством продукции, процессов и услуг" Margin="0,2,0,2"/>
            </StackPanel>

            <Label Content="Среднее профессиональное образование получаю:" 
                   HorizontalAlignment="Left" Margin="0,333,0,0" VerticalAlignment="Top" FontWeight="SemiBold"/>

            <Label Content="Выберите один из вариантов:" 
                   HorizontalAlignment="Left" Margin="20,359,0,0" VerticalAlignment="Top" FontSize="10" Foreground="Red"/>

            <RadioButton Content="впервые" HorizontalAlignment="Left" Margin="25,384,0,0" VerticalAlignment="Top" GroupName="EducationType"/>
            <RadioButton Content="не впервые" HorizontalAlignment="Left" Margin="25,409,0,0" VerticalAlignment="Top" GroupName="EducationType"/>

            <CheckBox HorizontalAlignment="Left" Margin="0,430,0,0" VerticalAlignment="Top" Width="750">
                <TextBlock Text="С лицензией на право осуществления образовательной деятельности, свидетельством о государственной аккредитации, правилами приёма и правилами внутреннего распорядка обучающихся в данном образовательном учреждении, с Уставом Техникума ознакомлен(а)." 
                          TextWrapping="Wrap"/>
            </CheckBox>

            <CheckBox Content="С датой представления оригиналов документов ознакомлен(а)" 
                     HorizontalAlignment="Left" Margin="0,494,0,0" VerticalAlignment="Top"/>

            <Button Content="Продолжить" HorizontalAlignment="Right" Margin="0,0,0,10" VerticalAlignment="Bottom" 
                    Width="150" Height="30"/>
